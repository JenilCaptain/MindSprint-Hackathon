# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
# For local development, replace with your MongoDB URI
MONGODB_URI=mongodb://localhost:27017/subtrackr
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/subtrackr

# Authentication
# Generate a strong random string for JWT_SECRET
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d

# Email Configuration (Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
# Replace with your Gmail address
EMAIL_USER=your_email@gmail.com
# Use App Password generated from Google Account settings
EMAIL_PASS=your_app_password_here

# Frontend URL
FRONTEND_URL=http://localhost:3000
