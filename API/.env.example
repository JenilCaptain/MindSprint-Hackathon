# Environment Variables
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/subscriptions

# JWT Secret
JWT_SECRET=your_super_secure_jwt_secret_key_here

# Client URL (for CORS)
CLIENT_URL=http://localhost:3000

# Email Configuration
EMAIL_SERVICE=sendgrid
# For SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourapp.com

# For Nodemailer (Gmail example)
GMAIL_USER=your_gmail@gmail.com
GMAIL_PASS=your_app_password_here

# Notification Settings
NOTIFICATION_CHECK_INTERVAL=*/30 * * * *  # Every 30 minutes
DAYS_BEFORE_RENEWAL=7,3,1  # Send notifications 7, 3, and 1 days before renewal

# API Keys for subscription services (examples)
STRIPE_API_KEY=sk_test_your_stripe_key
PAYPAL_CLIENT_ID=your_paypal_client_id
